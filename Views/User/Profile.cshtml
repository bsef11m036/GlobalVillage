@{
    Layout = "~/Views/Shared/LayoutPage2.cshtml";
}
@model EAD.Models.changePassword
<script>
    function varify() {
        if (document.getElementById("file").value != "") {
            return true;
        }
        else {
            alert("choose an Image for uploading.....");
            return false;
        }

    }
    $("#single_1").fancybox({
        helpers: {
            title: {
                type: 'float'
            }
        }
    });
    function varifyPassword() {
        var a = document.getElementById("p1").value;
        var b = document.getElementById("p2").value;
        if (a == b) {
            return true;
        }
        else {
            alert("Password do not match.... ");
            return false;
        }
    }
</script>
<style>
    .form_wrapper input[type="email"],
    .form_wrapper input[type="text"],
    .form_wrapper input[type="password"]{
	    border: solid 1px #E5E5E5;
	    background: #FFFFFF;
	    margin: 5px 30px 0px 30px;
	    padding: 9px;
	    display:block;
	    font-size:16px;
	    width:76%;
	    background: 
		    -webkit-gradient(
			    linear,
			    left top,
			    left 25,
			    from(#FFFFFF),
			    color-stop(4%, #EEEEEE),
			    to(#FFFFFF)
		    );
	    background: 
		    -moz-linear-gradient(
			    top,
			    #FFFFFF,
			    #EEEEEE 1px,
			    #FFFFFF 25px
			    );
	    -moz-box-shadow: 0px 0px 8px #f0f0f0;
	    -webkit-box-shadow: 0px 0px 8px #f0f0f0;
	    box-shadow: 0px 0px 8px #f0f0f0;
}
    .form_wrapper input[type="email"]:focus,
    .form_wrapper input[type="text"]:focus,
    .form_wrapper input[type="password"]:focus{
	    background:#feffef;
}

</style>    
<div id="main">
  		<div class="5grid">
				<div class="main-row">
					<div class="8u-first">
						
						<section class="left-content">
							<h2>Personal Information</h2>
                            <div >
                                    <h2>First Name: @ViewBag.x.FirstName</h2> 
                                    <h2>Last Name: @ViewBag.x.LastName</h2>
                                    <h2>User Name: @ViewBag.x.UserName</h2>
                                    <h2>Email: @ViewBag.x.EMail</h2>
                              </div>
                        </section>
                        <h1 style="font-size:50px;color:darkblue"> Change Password </h1>
					    <div id="form_wrapper" class="form_wrapper">
                            @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post, new { onsubmit="return varifyPassword()"}))
                            { 
                              <br>
                              <br>
                              <br>
                              <br>
                                <table >
                                  <tr>
                                      <td>
                                            @Html.LabelFor(x => x.OldPassword, new {style="font:700;font-size:xx-large;color:darkblue" })
                                      </td>
                                      <td>
                                          &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                                      </td>
                                      <td>
                                          @Html.TextBoxFor(x => x.OldPassword, new {  value="",type = "password", placeholder = "Old Password",required="" })
                                      </td>
                                  <tr>
                                  <tr>
                                      <td>
                                            @Html.LabelFor(x=>x.NewPassword, new {style="font:700;font-size:xx-large;color:darkblue" })
                                      </td>
                                      <td>
                                          &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                                      </td>
                                      <td>
                                          @Html.TextBoxFor(x => x.NewPassword, new { id="p1", value="",type = "password", placeholder = "New Password",required="" })
                                      </td>
                                  <tr>
                                  <tr>
                                      <td>
                                            @Html.LabelFor(x=>x.ReNewPassword, new {style="font:700;font-size:xx-large;color:darkblue" })
                                      </td>
                                      <td>
                                          &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                                      </td>
                                      <td>
                                          @Html.TextBoxFor(x => x.ReNewPassword, new { id="p2",value="",type = "password", placeholder = "Confirm New Password",required="" })
                                      </td>
                                  <tr>
                                  <tr>
                                    <tr>
                              </table>  
                                <br />
                                  <input type="submit" class="button" value="Change" />
                                 
                                 
                            }
                            </div>
    
					</div>
					<div class="4u">
                   
						@using (Html.BeginForm("Upload", "User", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return varify()" }))
                        { 
                            <br>
                            <div class="4u">

                                    <a id="single_1" href="@Url.Action("GetImage", "User")" title="Singapore from the air (Andrew Tan 2011)">
                                        <img src="@Url.Action("GetImage", "User")" id="imgupload" height="300" width="300" />
                                    </a>
                                    <br/>
                                    <br/>
                                    <input type="file" name="image" class="button" id="file"  />
                                    <br/>
                                    <br/>
                                    <br/>
                                    <input type="submit" class="button" value ="Upload Image" />  
	                        </div>				
                              
                          <br>
                          <br>
                       }
                      </div>
  
					</div>
				</div>
			</div>